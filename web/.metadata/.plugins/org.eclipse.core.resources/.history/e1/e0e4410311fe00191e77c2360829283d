package com.websocket.service;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ResourceBundle;

import com.websocket.model.ThietBi;

public class FunctionDatabase {
	private static ResourceBundle resourceBundle = ResourceBundle.getBundle("db");
	public static Connection getConnection()
	{
		try {
			Class.forName(resourceBundle.getString("driverName"));
			String url = resourceBundle.getString("url");
			String user = resourceBundle.getString("user");
			String password = resourceBundle.getString("password");
			return DriverManager.getConnection(url, user, password);
		} catch (ClassNotFoundException | SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}
	public static boolean update(ThietBi x)
	{
		Connection connection = getConnection();
		if(connection != null)
		{
			try {
				String sql = createSql(x);
				Statement statement = connection.createStatement();
				boolean result = statement.execute(sql);
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return false;
	}
	
	public static String createSql(ThietBi x)
	{
		String s = "update thietbi set";
		if(x.getName().equals("den1"))
			s = s + " den1 = " + x.isStatus();
		else if(x.getName().equals("den2"))
			s = s + " den2 = ?" + x.isStatus();
		else if(x.getName().equals("nhietdo"))
			s = s + " nhietdo = ?" + x.getNhietdo();
		else if(x.getName().equals("quat"))
			s = s + " quat = ?" + x.isStatus();
		else if(x.getName().equals("chedo"))
			s = s + " chedo = ?" + x.isStatus();
		return s;
	}
}
