<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>new jdbc 12 month 2018</display-name>
	<session-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>servletFilter</filter-name>
		<filter-class>com.websocket.AuthorizationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>servletFilter</filter-name>
		<url-pattern>/views/login.jsp</url-pattern>
		<url-pattern>/login</url-pattern>
		<url-pattern>/trangchu</url-pattern>
		<url-pattern>/views/trangchu.jsp</url-pattern>
		<url-pattern>/realtime-data</url-pattern>
	</filter-mapping>
</web-app>